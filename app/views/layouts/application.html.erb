<!DOCTYPE html>
<html>
  <head>
    <title>Flaner</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'flaner-bundle' %>
  </head>

  <body>
  		<div id="wrapper" class="">
			<div class="fakeLoader"></div>
  			<!-- Navigation -->
			<nav class="navbar navbar-default navbar-static-top"  style="margin-bottom: 0">
				
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="index2.html#"><img src="../dist/img/head-logo.png" class="img-responsive" alt="Flaner"></a>
				</div>
				<!-- /.navbar-header -->
				<ul class="nav navbar-top-links navbar-left header-search-form hidden-xs">
					<li>
					<a class="menu-brand">
						<% if user_signed_in? %>
							<span style="color:white">Selamat Datang, <%= @user.name %></span>
						<% end %>
					</a>
					</li>
				</ul>
				<!-- Sidebar Navigation -->
				<div class="navbar-default sidebar" role="navigation">

					<div class="sidebar-nav navbar-collapse">
						<ul class="nav" id="side-menu">
						   <li style="font-size: 20px;">
						   <%= link_to user_root_path do %>
									<i class="fa fa-dashboard" style="font-size: 20px"></i>
										Dashboard 
								<% end %>
							</li>

							<li style="font-size: 20px;">
						   <%= link_to user_root_path do %>
									<i class="fa fa-cart-plus" style="font-size: 20px"></i>
										Produk 
								<% end %>
							</li>

							<li style="font-size: 20px;">
						   <%= link_to borang_path do %>
									<i class="fa fa-wpforms" style="font-size: 20px"></i>
										Borang 
								<% end %>
							</li>

							<li style="font-size: 20px;">
						   <%= link_to user_root_path do %>
									<i class="fa fa-users" style="font-size: 20px"></i>
										Ejen 
								<% end %>
							</li>

							<li style="font-size: 20px;">
						   <%= link_to user_root_path do %>
									<i class="fa fa-database" style="font-size: 20px"></i>
										CRM 
								<% end %>
							</li>

							<li style="font-size: 20px;">
						   <%= link_to user_root_path do %>
									<i class="fa fa-tasks" style="font-size: 20px"></i>
										Transaksi 
								<% end %>
							</li>

							<li style="font-size: 20px;">
								<%= link_to destroy_user_session_path, :method => :delete  do %>
									<i class="fa fa-power-off" style="font-size: 20px"></i>
										Logout 
								<% end %>
							</li>

						</ul>
					</div>
					<!-- /.sidebar-collapse -->
				</div>
			</nav>
			<!-- Sidebar Navigation -->

			<div id="page-wrapper">
				<%= yield %>
			</div>
		</div>
  </body>
</html>
